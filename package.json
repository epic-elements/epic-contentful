{
    "name": "epic-contentful",
    "version": "1.0.2",
    "description": "Stencil Component for interfacing with Contentful delivery api",
    "module": "dist/esm/index.js",
    "main": "dist/index.js",
    "types": "dist/types/components.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "stencil build",
        "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
        "serve": "stencil-dev-server",
        "start": "npm run dev",
        "test": "jest",
        "test.watch": "jest --watch"
    },
    "dependencies": {},
    "devDependencies": {
        "@stencil/core": "^0.9.1",
        "@stencil/dev-server": "latest",
        "@stencil/utils": "latest",
        "@types/jest": "^21.1.1",
        "jest": "^21.2.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/epic-elements/epic-contentful.git"
    },
    "author": "Max Leitch",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/epic-elements/epic-contentful"
    },
    "homepage": "https://github.com/epic-elements/epic-contentful",
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "jsx"
        ]
    }
}
